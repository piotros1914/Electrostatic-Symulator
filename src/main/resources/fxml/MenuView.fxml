<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="electrostatic.java.fx.controller.MenuController">
   <menus>
      <Menu mnemonicParsing="false" text="Plik">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#openFileAction" text="Otwórz" />
            <MenuItem mnemonicParsing="false" text="Zapisz" />
            <MenuItem mnemonicParsing="false" text="Zapisz jako..." />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#closeAction" text="Zamknij" />
         </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Widok">
         <items>
            <CheckMenuItem mnemonicParsing="false" text="Pokarz wektory sił" />
            <CheckMenuItem fx:id="showGridMenuItem" mnemonicParsing="false" selected="true" text="Pokarz siatkę" />
         </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Pomoc">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#aboutAction" text="O programie" />
         </items>
      </Menu>
   </menus>
</MenuBar>
